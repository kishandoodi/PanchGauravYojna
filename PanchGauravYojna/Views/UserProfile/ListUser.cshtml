@using MO.Common
@model List<MO.ProfileUser.UserListMO>
@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_LayoutIn.cshtml";

    var nonce = Context.Items["CSPNonce"]?.ToString();
    MenuPermissionMO p = ViewBag.Permission as MenuPermissionMO ?? new MenuPermissionMO();
}
<style nonce="@nonce">
    div.dt-search {
        float: right !important;
        text-align: right !important;
        margin-bottom: 5px;
    }

        div.dt-search input {
            margin-left: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 3px 6px;
        }
</style>
<div class="">
    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="card radius-10">
                @if (p?.CanList == true)
                {
                    <div class="card-header color-header headercolor7">
                        <div class="d-flex align-items-center">
                            <h6 class="mb-0">User List</h6>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tbl_list" class="table table-striped table-bordered">
                                <thead class="headercolor6">
                                    <tr>
                                        <th>S.No.</th>
                                        <th>Name</th>
                                        <th>Display Name</th>
                                        <th>SSOID</th>
                                        <th>Mobile</th>
                                        <th>WhatsappMobile</th>
                                        <th>Designation</th>
                                        <th>UserLevel</th>
                                        <th>Department</th>
                                        <th>District</th>
                                        <th>Group</th>
                                        <th>Status</th>
                                        <th>Status Change</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        int sr = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@sr</td>
                                                <td>@item.Name</td>
                                                <td>@item.DisplayName</td>
                                                <td>@item.SSOID</td>
                                                <td>@item.Mobile</td>
                                                <td>@item.WhatsappMobile</td>
                                                <td>@item.Designation</td>
                                                <td>@item.UserLevel</td>
                                                <td>@item.DepartmentName</td>
                                                <td>@item.DistrictName</td>
                                                <td>@item.Group</td>
                                                <td>
                                                    @if (item.IsActive)
                                                    {
                                                        <span class="badge bg-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Inactive</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (p?.CanActiveDeactive == true)
                                                    {
                                                        <button class="btn btn-sm toggle-active-btn @(item.IsActive ? "btn-danger" : "btn-success")"
                                                                data-guid="@item.Guid"
                                                                data-isactive="@item.IsActive">
                                                            @(item.IsActive ? "Deactivate" : "Activate")
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">No Access</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (p?.CanEdit == true)
                                                    {
                                                        <a asp-action="AddUser" asp-controller="UserProfile" asp-route-guid="@item.Guid" class="btn btn-sm btn-success">
                                                            Edit
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">No Access</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (p?.CanDelete == true)
                                                    {
                                                        <button class="btn btn-sm btn-danger delete-btn"
                                                                data-guid="@item.Guid">
                                                            Delete
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">No Access</span>
                                                    }
                                                </td>
                                            </tr>
                                            sr++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center">No records found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<script nonce="@Context.Items["CSPNonce"]">
    document.addEventListener("DOMContentLoaded", () => {

        table.dataTable('tbl_list');
        // Attach event listener to all buttons with .toggle-active-btn
        document.querySelectorAll(".toggle-active-btn").forEach(button => {
            button.addEventListener("click", (event) => {
                const guid = event.target.getAttribute("data-guid");
                if (!guid) return;

                // Example confirmation (no Swal)
                if (!confirm("Are you sure you want to activate this record?")) return;

                // Call backend to toggle active status
                common.ShowLoader();

                const data = { guid: guid };
                ajax.doPostAjax(`${domain.getdomain()}/UserProfile/ChangeUserStatus`, data, function (response) {
                    common.HideLoader();
                    if (response.status) {
                        toast.showToast('success', response.message, 'success');
                         setTimeout(function () {
                            var data = {};
                            location.reload();
                        }, 2000);
                    } else {
                        toast.showToast('error', response.message, 'error');
                    }
                });
            });
        });

        // Attach event listener to all buttons with .toggle-active-btn
        document.querySelectorAll(".delete-btn").forEach(button => {
            button.addEventListener("click", (event) => {
                const guid = event.target.getAttribute("data-guid");
                if (!guid) return;

                // Example confirmation (no Swal)
                if (!confirm("Are you sure you want to delete this record?")) return;

                // Call backend to toggle active status
                common.ShowLoader();

                const data = { guid: guid };
                ajax.doPostAjax(`${domain.getdomain()}/UserProfile/Delete`, data, function (response) {
                    common.HideLoader();
                    if (response.status) {
                        toast.showToast('success', response.message, 'success');
                        setTimeout(function () {
                            var data = {};
                            location.reload();
                        }, 2000);
                        //location.reload();
                    } else {
                        toast.showToast('error', response.message, 'error');
                    }
                });
            });
        });
    });
</script>
