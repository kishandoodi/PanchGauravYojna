@model MO.WebsiteMaster.AnnouncementVM
@{
    ViewData["Title"] = "Announcement";
    Layout = "~/Views/Shared/_LayoutIn.cshtml";
    var nonce = Context.Items["CSPNonce"]?.ToString();
}
<form asp-action="SaveAnnouncement" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExistingFilePath" />

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Image / PDF</label>
        <input asp-for="File" type="file" class="form-control"
               accept=".jpg,.jpeg,.png,.pdf" />
    </div>

    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label>Is Active</label>
    </div>

    <div class="form-check">
        <input asp-for="IsNew" class="form-check-input" />
        <label>Is New</label>
    </div>

    <button class="btn btn-primary">Save</button>
</form>
