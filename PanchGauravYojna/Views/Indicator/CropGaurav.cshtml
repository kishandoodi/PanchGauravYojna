                                <div class="col-lg-3">
                                    <label>District</label>
                                    <select class="form-select form-select-sm" name="District" id="District" onchange="gauravQuestion.getdata()">
                                    </select>
                                    <div>
                                        <label for="error" class="mt-0" id="errorDistrict" style="color:red; font-size:13px;"></label>
                                    </div>
                                </div>
                            }
                            <div class="col-lg-3">
                                <label>Gaurav</label>
                                <select class="form-select form-select-sm" name="Gaurav" id="Gaurav" onchange="gauravQuestion.getdata()">
