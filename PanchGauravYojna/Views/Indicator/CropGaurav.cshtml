                                        <tr>
                                            <th>S.No.</th>
                                            <th>Indicator</th>
                                            <th>Unit</th>
                                            <th>BaseLine Status (2024-25)</th>
                                            <th>Target (2025-26)</th>
                                        </tr>
                                    </thead> *@
                                    <tbody id="myTable">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row col-2 offset-10">
                        <button type="submit" onclick="progress.savedata()" class="btn btn-success" id="btnSave" disabled>Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/custom/Common.js" asp-append-version="true"></script>
