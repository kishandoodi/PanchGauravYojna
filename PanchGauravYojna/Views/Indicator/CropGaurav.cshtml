                                        </tr>
                                        <tr>
                                            <td>vanspati prajati</td>
                                            <td><input type="text" class="form-control" placeholder="अपना उत्तर यहाँ लिखें..." name="q.questionMasterId" /></td>
                                            <td><textarea rows="2" cols="20" class="form-control" placeholder="अपना उत्तर यहाँ लिखें..." name="q.questionMasterId"></textarea></td>

                                        </tr>
                                        <tr>
                                            <td>khel</td>
                                            <td><input type="text" class="form-control" placeholder="अपना उत्तर यहाँ लिखें..." name="q.questionMasterId" /></td>
                                            <td><textarea rows="2" cols="20" class="form-control" placeholder="अपना उत्तर यहाँ लिखें..." name="q.questionMasterId"></textarea></td>

                                        </tr>
                                        <tr>
                                            <td>praytan sthal</td>
                                            <td><input type="text" class="form-control" placeholder="अपना उत्तर यहाँ लिखें..." name="q.questionMasterId" /></td>
                                            <td><textarea rows="2" cols="20" class="form-control" placeholder="अपना उत्तर यहाँ लिखें..." name="q.questionMasterId"></textarea></td>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>
