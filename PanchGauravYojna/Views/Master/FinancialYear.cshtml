@using MO.Common
@model MO.Master.FinancialYearCM
@{
    ViewData["Title"] = "Financial Year";
    Layout = "~/Views/Shared/_LayoutIn.cshtml";

    var nonce = Context.Items["CSPNonce"]?.ToString();
    MenuPermissionMO p = ViewBag.Permission as MenuPermissionMO ?? new MenuPermissionMO();
}
<style nonce="@nonce">
    div.dt-search {
        float: right !important;
        text-align: right !important;
        margin-bottom: 5px;
    }

        div.dt-search input {
            margin-left: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
            padding: 3px 6px;
        }
</style>
<div class="">
    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="card radius-10">
                <!-- ===================== FORM SECTION ===================== -->
                @if (p?.CanAdd == true || p?.CanEdit == true)
                {
                    <div class="card-header color-header headercolor7">
                        <div class="d-flex align-items-center">
                            <h6 class="mb-0">Manage Department</h6>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="FinancialYear" asp-controller="Master" method="post">
                          <input type="hidden" asp-for="Guid" />                          
                          <div class="row">
                              <div class="col-md-3">
                                  <label>Financial Year</label>
                                  <input asp-for="FinancialYear" class="form-control" />
                                  <span asp-validation-for="FinancialYear" class="text-danger"></span>
                              </div>
                          
                              <div class="col-md-2">
                                  <label>Year</label>
                                  <input asp-for="Year" class="form-control" />
                                  <span asp-validation-for="Year" class="text-danger"></span>
                              </div>
                          
                              <div class="col-md-2">
                                  <label>Is Current</label>
                                  <input type="checkbox" asp-for="IsCurrent" />            
                              </div>
                              <div class="col-md-2">
                                  <label>Is Active</label>
                                  <input type="checkbox" asp-for="IsActive" />            
                              </div>
                          
                              <div class="col-md-2 mt-4">
                                  <button class="btn btn-primary">@Model.BtnSave</button>
                              </div>
                          </div>
                         </form>                       
                    </div>
                }

                <!-- ===================== LIST SECTION ===================== -->
                @if (p?.CanList == true)
                {
                    <div class="card-header color-header headercolor7">
                        <div class="d-flex align-items-center">
                            <h6 class="mb-0">Department List</h6>
                        </div>
                    </div>

                    <div class="card-body">

                        <table id="tbl_list" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>S.No.</th>                                                                    
                                    <th>Year</th>                                   
                                    <th>Financial Year</th>
                                     <th>Status</th>
                                    <th>ISCurrent</th>
                                    <th>Toggle</th>
                                     <th>ISCurrent</th>
                                    <th>Edit</th>
                                    <th>Delete</th>                                    
                                </tr>
                            </thead>
                             <tbody>
                             @if (Model != null && Model.FinancialYear_List.Any())
                                {
                                    int sr = 1;
                                    foreach (var item in Model.FinancialYear_List)
                                            {
                                           <tr>
                                            <td>@sr</td>                                           
                                            <td>@item.Year</td>
                                            <td>@item.FinancialYear</td>
                                            <td>
                                                        @if (item.IsActive)
                                                        {
                                                            <span class="badge bg-success">Active</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">Inactive</span>
                                                        }
                                                    </td>
                                            <td>
                                                @if (item.IsCurrent)
                                                {
                                                    <span class="badge bg-success">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">NO</span>
                                                }
                                            </td>
                                            <td>
                                                @if (p?.CanActiveDeactive == true)
                                                {
                                                    <button class="btn btn-sm toggle-active-btn @(item.IsActive ? "btn-danger" : "btn-success")"
                                                            data-guid="@item.Guid"
                                                            data-isactive="@item.IsActive">
                                                        @(item.IsActive ? "Deactivate" : "Activate")
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">No Access</span>
                                                }
                                            </td>
                                            <td>
                                                @if (p?.CanActiveDeactive == true)
                                                {
                                                    if(!item.IsCurrent){
                                                    <button class="btn btn-sm iscurrent-active-btn @(item.IsCurrent ? "btn-danger" : "btn-success")"
                                                            data-guid="@item.Guid"
                                                            data-iscurrent="@item.IsCurrent">
                                                        @(item.IsCurrent ? "Set" : "Set IsCurrent")
                                                    </button>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">No Access</span>
                                                }
                                            </td>
                                            <td>
                                                @if (p?.CanEdit == true)
                                                {
                                                    <a asp-action="FinancialYear" asp-controller="Master" asp-route-guid="@item.Guid" class="btn btn-sm btn-success">
                                                        Edit
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">No Access</span>
                                                }
                                            </td>
                                            <td>
                                                @if (p?.CanDelete == true)
                                                {
                                                    <button class="btn btn-sm btn-danger delete-btn"
                                                            data-guid="@item.Guid">
                                                        Delete
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">No Access</span>
                                                }
                                            </td>
                                                    
                                           </tr>
                                           sr++;
                                            }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No records found</td>
                                    </tr>
                                }
                             </tbody>
                        </table>

                    </div>
                }

            </div>
        </div>
    </div>
</div>
<script nonce="@Context.Items["CSPNonce"]">
    document.addEventListener("DOMContentLoaded", () => {

        table.dataTable('tbl_list');
        // Attach event listener to all buttons with .toggle-active-btn
        document.querySelectorAll(".toggle-active-btn").forEach(button => {
            button.addEventListener("click", (event) => {
                const guid = event.target.getAttribute("data-guid");
                if (!guid) return;

                // Example confirmation (no Swal)
                if (!confirm("Are you sure you want to activate this record?")) return;

                // Call backend to toggle active status
                common.ShowLoader();

                const data = { guid: guid };
                ajax.doPostAjax(`${domain.getdomain()}/Master/ToggleActive_FinancialYear`, data, function (response) {
                    common.HideLoader();
                    if (response.status) {
                        toast.showToast('success', response.message, 'success');
                         setTimeout(function () {
                            var data = {};
                            location.reload();
                        }, 2000);
                    } else {
                        toast.showToast('error', response.message, 'error');
                    }
                });
            });
        });

        // Attach event listener to all buttons with .toggle-active-btn
        document.querySelectorAll(".iscurrent-active-btn").forEach(button => {
            button.addEventListener("click", (event) => {
                const guid = event.target.getAttribute("data-guid");
                if (!guid) return;

                // Example confirmation (no Swal)
                if (!confirm("Are you sure you want to iscurrent this record?")) return;

                // Call backend to toggle active status
                common.ShowLoader();

                const data = { guid: guid };
                ajax.doPostAjax(`${domain.getdomain()}/Master/IsCurrent_FinancialYear`, data, function (response) {
                    common.HideLoader();
                    if (response.status) {
                        toast.showToast('success', response.message, 'success');
                         setTimeout(function () {
                            var data = {};
                            location.reload();
                        }, 2000);
                    } else {
                        toast.showToast('error', response.message, 'error');
                    }
                });
            });
        });
        // Attach event listener to all buttons with .toggle-active-btn
        document.querySelectorAll(".delete-btn").forEach(button => {
            button.addEventListener("click", (event) => {
                const guid = event.target.getAttribute("data-guid");
                if (!guid) return;

                // Example confirmation (no Swal)
                if (!confirm("Are you sure you want to delete this record?")) return;

                // Call backend to toggle active status
                common.ShowLoader();

                const data = { guid: guid };
                ajax.doPostAjax(`${domain.getdomain()}/Master/Delete_FinancialYear`, data, function (response) {
                    common.HideLoader();
                    if (response.status) {
                        toast.showToast('success', response.message, 'success');
                        setTimeout(function () {
                            var data = {};
                            location.reload();
                        }, 2000);
                        //location.reload();
                    } else {
                        toast.showToast('error', response.message, 'error');
                    }
                });
            });
        });
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />   
}
