@using MO.Common
@model MO.Master.GauravDistrictMO
@{
    ViewData["Title"] = "Gaurav District Mapping";
    Layout = "~/Views/Shared/_LayoutIn.cshtml";

    var nonce = Context.Items["CSPNonce"]?.ToString();
    MenuPermissionMO p = ViewBag.Permission as MenuPermissionMO ?? new MenuPermissionMO();
}

<style nonce="@nonce">
    div.dt-search {
        float: right !important;
        text-align: right !important;
        margin-bottom: 5px;
    }

    div.dt-search input {
        margin-left: 5px;
        border-radius: 4px;
        border: 1px solid #ccc;
        padding: 3px 6px;
    }
</style>

<div class="">
    <div class="row">
        <div class="col-12 col-lg-12">

            <div class="card radius-10">

                <!-- ========== FORM SECTION ========== -->
                @if (p?.CanAdd == true || p?.CanEdit == true)
                {
                    <div class="card-header color-header headercolor7">
                        <div class="d-flex align-items-center">
                            <h6 class="mb-0">Manage Gaurav District Mapping</h6>
                        </div>
                    </div>

                    <div class="card-body">
                        <form asp-action="GauravDistrictItem" asp-controller="Master" method="post">
                            <input type="hidden" asp-for="Guid" />

                            <div class="row g-3">
                                <div class="col-lg-6">
                                    <label>Gaurav <span class="text-danger">*</span></label>
                                    <select asp-for="GauraveId" class="form-select form-select-sm"
                                            asp-items="@(new SelectList(Model.GauravList, "Id", "Name"))">
                                        <option value="">-- Select Gaurav --</option>
                                    </select>
                                    <span asp-validation-for="GauraveId" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6">
                                    <label>District <span class="text-danger">*</span></label>
                                    <select asp-for="DistrictId" class="form-select form-select-sm"
                                            asp-items="@(new SelectList(Model.DistrictList, "Id", "DistrictName"))">
                                        <option value="">-- Select District --</option>
                                    </select>
                                    <span asp-validation-for="DistrictId" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6">
                                    <label>Gaurav Item<span class="text-danger">*</span></label>
                                    <input asp-for="GauravName" class="form-control form-control-sm" />
                                    <span asp-validation-for="GauravName" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6">
                                    <label>Mangal Name<span class="text-danger">*</span></label>
                                    <input asp-for="MangalName" class="form-control form-control-sm" />
                                    <span asp-validation-for="MangalName" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6">
                                    <label>Vivran</label>
                                    <textarea asp-for="Vivran" class="form-control form-control-sm"></textarea>
                                    <span asp-validation-for="Vivran" class="text-danger"></span>
                                </div>
                                <div class="col-lg-6 d-flex align-items-center mt-4">
                                    <div class="form-check mt-3">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" />
                                        <label for="IsActive" class="form-check-label">Is Active</label>
                                    </div>
                                </div>
                                <div class="col-lg-6 mt-4 d-flex align-items-center">
                                    <button type="submit" class="btn btn-primary me-2">@Model.BtnSave</button>
                                    <a asp-asp-action="GauravDistrictItem" asp-controller="Master" class="btn btn-danger" id="btnCancelDistrict">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                }

                <!-- ========== LIST SECTION ========== -->
                @if (p?.CanList == true)
                {
                    <div class="card-header color-header headercolor7">
                        <div class="d-flex align-items-center">
                            <h6 class="mb-0">Gaurav District Mapping List</h6>
                        </div>
                    </div>

                    <div class="card-body">
                        <table id="tbl_list" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>S.No.</th>
                                    <th>Name</th>
                                    <th>District</th>
                                    <th>Gaurav</th>
                                    <th>Mangal Name</th>
                                    <th>Vivran</th>
                                    <th>Status</th>
                                    <th>Change Status</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null && Model.list.Any())
                                {
                                    int sr = 1;
                                    foreach (var item in Model.list)
                                    {
                                        <tr>
                                            <td>@sr</td>
                                            <td>@item.GauravName</td>
                                            <td>@Model.DistrictList?.FirstOrDefault(x => x.Id == item.DistrictId)?.DistrictName</td>
                                            <td>@Model.GauravList?.FirstOrDefault(x => x.Id == item.GauraveId)?.Name</td>
                                            <td>@item.MangalName</td>
                                            <td>@item.Vivran</td>

                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>

                                            <td>
                                                @if (p?.CanActiveDeactive == true)
                                                {
                                                    <button class="btn btn-sm toggle-active-btn @(item.IsActive ? "btn-danger" : "btn-success")"
                                                            data-guid="@item.Guid"
                                                            data-isactive="@item.IsActive">
                                                        @(item.IsActive ? "Deactivate" : "Activate")
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">No Access</span>
                                                }
                                            </td>

                                            <td>
                                                @if (p?.CanEdit == true)
                                                {
                                                    <a asp-action="GauravDistrictItem"
                                                       asp-controller="Master"
                                                       asp-route-guid="@item.Guid"
                                                       class="btn btn-sm btn-success">Edit</a>
                                                }
                                            </td>

                                            <td>
                                                @if (p?.CanDelete == true)
                                                {
                                                    <button class="btn btn-sm btn-danger delete-btn"
                                                            data-guid="@item.Guid">
                                                        Delete
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                        sr++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center">No records found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


<!-- ========== SCRIPT SECTION ========== -->
<script nonce="@Context.Items["CSPNonce"]">
    document.addEventListener("DOMContentLoaded", () => {
        table.dataTable('tbl_list');
        // === Toggle Active ===
        document.querySelectorAll(".toggle-active-btn").forEach(button => {
            button.addEventListener("click", (event) => {
                const guid = event.target.getAttribute("data-guid");
                if (!guid) return;

                if (!confirm("Are you sure you want to change status?")) return;

                common.ShowLoader();

                const data = { guid: guid };

                ajax.doPostAjax(`${domain.getdomain()}/Master/GauravDistToggleActive`, data, function (response) {
                    common.HideLoader();

                    if (response.status) {
                        toast.showToast('success', response.message, 'success');
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        toast.showToast('error', response.message, 'error');
                    }
                });
            });
        });

        // === Delete ===
        document.querySelectorAll(".delete-btn").forEach(button => {
            button.addEventListener("click", (event) => {

                const guid = event.target.getAttribute("data-guid");
                if (!guid) return;

                if (!confirm("Are you sure you want to delete this record?")) return;

                common.ShowLoader();

                const data = { guid: guid };

                ajax.doPostAjax(`${domain.getdomain()}/Master/GauravDistDelete`, data, function (response) {
                    common.HideLoader();

                    if (response.status) {
                        toast.showToast('success', response.message, 'success');
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        toast.showToast('error', response.message, 'error');
                    }
                });
            });
        });

    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
